    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
<div class="row justify-content-center" style="margin:20px">
						<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">
							<div class="card  box-shadow-0">
								<div class="card-header d-flex justify-content-between" style="padding-top:15px">
                                  <h4 class="card-title mb-1">Add Client Speak</h4>
                                  <a href="/client/show" class="btn btn-primary">Back</a>
								</div>
                          
                                <div style="text-align:center;"><p class="popular_job_show"></p></div>
								<div class="card-body pt-0" >
									<form  method="post" action="/client/add">
                              
										<br>

                                        <div class="row">
                                    

                                                <div class="col-md-12">
                                                    <div class="form-group" >
                                                    <label>Video Title <span class="required_">*</span></label>
                                                        <input type="text" class="form-control" name="title" id="inputName" placeholder="Enter Title"  required>
                                                    </div>
                                                    </div>


                                                <div class="col-md-12">
                                                    <div class="form-group" >
                                                    <label>Video link <span class="required_">*</span></label>
                                                        <input type="text" class="form-control" name="link" id="inputName" placeholder="Enter Video link"  required>
                                                    </div>
                                                    </div>

                                                    <div class="col-md-12">
                                                        <div class="form-group" >
                                                           <label>Enter Meta Tag Description<span class="required_">*</span></label>
                                                           <textarea type="datetime-local" class="form-control " name="meta"  ></textarea>
                                                        </div>
                                                     </div>


                                                    <div class="col-md-12">
                                                        <div class="form-group" >
                                                           <label>Short Description<span class="required_">*</span></label>
                                                           <textarea type="datetime-local" class="form-control editor1" name="desc"  required></textarea>
                                                        </div>
                                                     </div>
                                              

                                            <div class="form-group mb-0 mt-3 justify-content-end">
                                            <div><br>
                                                    <button type="submit" class="btn btn-primary">Submit</button>
                                                    
                                            </div>
                                            </div>
                                    
									</form>

								</div>
							</div>
						</div>
                    </div>
