<%- include ('../layout/header.ejs') %>

<style>
    html body .label-info {
    background: #01b2ac !important;
}
    </style>
    <!-- <% if(typeof error != 'undefined'){ %>
    <div style="text-align: center;"><p><%= error %></p></div>
    <% } %> -->
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
<div class="row justify-content-center" style="margin:20px">
						<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">
							<div class="card  box-shadow-0">
								<div class="card-header d-flex justify-content-between" style="padding-top:15px">
                                  <h4 class="card-title mb-1">Edit Blog</h4>
                                  <a href="/blog/show" class="btn btn-primary">Back</a>
								</div>
                          
                                <div style="text-align:center;"><p class="popular_job_show"></p></div>
								<div class="card-body pt-0" >
									<form  method="post" action="/blog/edit/<%= category._id %>"  enctype="multipart/form-data">
                              
										<br>

                                        <div class="row">
                                    

                                                <div class="col-md-12">
                                                    <div class="form-group" >
                                                    <label>Title <span class="required_">*</span></label>
                                                        <input type="text" class="form-control" value="<%= category.title %>" name="title" id="inputName" placeholder="Enter Title"  required>
                                                    </div>
                                                    </div>


                                                   

                                               <div class="col-md-12">
                                                <div class="form-group" >
                                                <label>Choose Image <span class="required_">*</span></label>
                                                    <input type="file" class="form-control" name="image" id="inputName" >
                                                </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group" >
                                                    <label>Author Name <span class="required_">*</span></label>
                                                        <input type="text"  value="<%= category.author %>"  class="form-control" name="author" id="inputName" placeholder="Enter Author Name"  required>
                                                    </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="form-group" >
                                                        <label>Slug <span class="required_">*</span></label>
                                                            <input type="text" class="form-control"  value="<%= category.slug %>"  name="slug" id="inputName" placeholder="Enter Slug Name"  required>
                                                        </div>
                                                        </div>

                                                    <div class="col-md-12">
                                                        <div class="form-group" >
                                                           <label>Content<span class="required_">*</span></label>
                                                           <textarea type="datetime-local" class="form-control editor1" name="content"  required><%= category.content %></textarea>
                                                        </div>
                                                     </div>
                                              

                                            <div class="form-group mb-0 mt-3 justify-content-end">
                                            <div><br>
                                                    <button type="submit" class="btn btn-primary">Submit</button>
                                                    
                                            </div>
                                            </div>
                                    
									</form>

								</div>
							</div>
						</div>
                    </div>
                    <script>
                        CKEDITOR.replaceAll('editor1');
                     </script>
                     
<%- include ('../layout/footer.ejs') %>


