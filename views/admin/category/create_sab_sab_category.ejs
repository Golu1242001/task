<%- include ('../layout/header.ejs') %>

<style>
    html body .label-info {
    background: #01b2ac !important;
}
    </style>
    <!-- <% if(typeof error != 'undefined'){ %>
    <div style="text-align: center;"><p><%= error %></p></div>
    <% } %> -->
<div class="row justify-content-center" style="margin:20px">
						<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">
							<div class="card  box-shadow-0">
								<div class="card-header d-flex justify-content-between" style="padding-top:15px">
                                  <h4 class="card-title mb-1">Add Sub Category</h4>
                                  <a href="/category/sub_sub_category" class="btn btn-primary">Back</a>
								</div>
                          
                                <div style="text-align:center;"><p class="popular_job_show"></p></div>
								<div class="card-body pt-0" >
									<form  method="post" action="/category/sub_sub_category_create"  enctype="multipart/form-data">
                              
										<br>

                                        <div class="row">
                                    

                                                <div class="col-md-4">
                                                    <div class="form-group" >
                                                    <label>Sub Sub Category Name <span class="required_">*</span></label>
                                                        <input type="text" class="form-control" name="sub_sub_category" id="inputName" placeholder="New Category"  required>
                                                    </div>
                                                    </div>


                                                    <div class="col-md-4">
                                                        <div class="form-group" >
                                                        <label>Select Category Name <span class="required_"></span></label>
                                                            <select type="text" onchange="getSubCcategory(this.value)" class="form-control" name="category_id" id="inputName"   style="height: 47px;" required>
                                                                <option value="">-select category-</option>
                                                                <% category.forEach((data)=>{ %>

                                                               
                                                                <option value="<%= data._id %>"><%= data.category %></option>

                                                                 <%  }) %>
                                                                
                                                            
                                                            </select>
                                                        </div>
                                                        </div>

                                                        <div class="col-md-4">
                                                            <div class="form-group" >
                                                            <label>Select Sub Category Name <span class="required_"></span></label>
                                                                <select type="text" class="form-control" name="category_sub_id" id="getsub"   style="height: 47px;" >
                                                                    
                                                                   
                                                                  
                                                                   
                                                                   
                                                                   
                                                                    
                                                                
                                                                </select>
                                                            </div>
                                                            </div>

                                            <div class="col-md-12">
                                                <div class="form-group" >
                                                <label>Sub Sub Category Logo <span class="required_">*</span></label>
                                                    <input type="file" class="form-control" name="logo" id="inputName" required>
                                                </div>
                                                </div>

                                              

                                            <div class="form-group mb-0 mt-3 justify-content-end">
                                            <div><br>
                                                    <button type="submit" class="btn btn-primary">Submit</button>
                                                    
                                            </div>
                                            </div>
                                    
									</form>

								</div>
							</div>
						</div>
                    </div>

                    <script>
                        function getSubCcategory(id){

                            $.ajax({
                                url:'http://localhost:3000/category/getsubcategory',
                                method:'post',
                                data:{ id : id },
                                success:function(data){
                                 if(data.status == true){
                                    var html=''
                                    html = '<option value="">-select category-</option>'
                                    data.sab_category.forEach(category => {
                                         html += ` <option value="${category._id}"> ${category.sub_category } </option>`
                                    });
                                   
                                       $('#getsub').html(html);
                                 }
                                }
                            })

                        }
                    </script>

