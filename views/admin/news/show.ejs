
<%- include ('../layout/header.ejs') %>


<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                <div class="d-flex justify-content-between">
                  <h4 class="card-title"></h4>
          
                  <a href="/news/add" style="padding:10px; border-radius:5px" class="btn-success"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add News</a>
              
               </div>
                  <p class="card-description">
                    <!-- Add class <code>.table-bordered</code> -->
                  </p>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered myTable">
                         <thead>
                        <tr>
                          <th>
                            Id
                          </th>
                          <th>
                            Title
                          </th>
                          <th>
                            Image
                          </th>
                          <th>
                            Author
                            </th>
                          <th>
                            Action
                          </th>
                        </tr>
                      </thead>


                      <tbody>
                        <%  
                        i=1; 
                        category.forEach(function(cop){ 
                        %>
                      
                        <tr>
                          <td>
                           <%= i %>
                          </td>
                          <td>
                            <%= cop.title %>
                          </td>

                          <!-- <td>
                        <%=  cop.discount %>
                          </td> -->

                          <td>
                            <img src=" <%= path %><%=cop.logo %> " width="150px" >
                              </td>
                        
                          <td>
                            <%= cop.author %>
                          </td>
                               
                              <td>
                           
                           
                         <a href="/news/delete/<%= cop._id %>" data-toggle="tooltip" data-placement="top" title="delete Button" onclick = "if (! confirm('are you sure you want to delete this news detail?')) { return false; }" class="btn btn-primary btn-sm"><i class="fa fa-trash" aria-hidden="true"></i></a>
                   

                         <% if(cop.status == 1){ %>

                            <a href="/news/status/<%= cop._id %>/2" data-toggle="tooltip" data-placement="top" title="Active playlist" class="btn btn-success  btn-sm"><i class="fa fa-user" aria-hidden="true"></i></a>
  
                            <% }else{ %>
  
                              <a href="/news/status/<%= cop._id %>/1" data-toggle="tooltip" data-placement="top" title="disable playlist" class="btn btn-warning  btn-sm"><i class="fa fa-ban" aria-hidden="true"></i></a>
  
                            <% } %>
                       

                         
                          <a href="/news/edit/<%= cop._id %>" data-toggle="tooltip" data-placement="top" title="edit button" style="background-color:blue" class="btn btn-primary btn-sm"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                 

                          </td>
                        
                        </tr>
                       
                       <%
                       i++;
                       });
                       %>
                       
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

            <%- include ('../layout/footer.ejs') %>
